<UserControl x:Class="AvnConnect.Dialogs.ColorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AvnConnect.Dialogs"
             mc:Ignorable="d">
    <Border x:Name="MainBorder"
            MouseLeftButtonUp="MainBorder_MouseLeftButtonUp"
            BorderThickness="2"
            BorderBrush="{Binding DefaultBorderBrush}"
            Cursor="Hand" Margin="2"
            CornerRadius="20">
        <Ellipse x:Name="ContentEllipse" Fill="{Binding ColorBrush}" Margin="1" ></Ellipse>
    </Border>
</UserControl>
